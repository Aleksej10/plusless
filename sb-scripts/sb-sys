#!/bin/dash
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case $BLOCK_BUTTON in
  1) case "$(echo "ğŸ”’ lock\nğŸšª leave dwm\nğŸŸ¦ renew dwm\nğŸ» hibernate\nğŸŸ¢ reboot\nğŸ”´ shutdown\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -fn monospace:pixelsize=14 -nb \#282828 -nf \#bbbbbb -sb \#d71513 -sf \#eeeeee -l 8 -i -p 'what do?')" in
    'ğŸ”’ lock') slock ;;
    'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
    'ğŸŸ¦ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
    'ğŸ» hibernate') slock $ctl hibernate ;;
    'ğŸ’¤ sleep') slock $ctl suspend ;;
    'ğŸŸ¢ reboot') $ctl reboot -i ;;
    'ğŸ”´ shutdown') $ctl poweroff -i ;;
    'ğŸ“º display off') xset dpms force off ;;
    esac
  ;;
	6) st -e "$EDITOR" "$0" ;;
esac

echo "ğŸ”´"
